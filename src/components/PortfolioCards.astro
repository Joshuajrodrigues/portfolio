---
import Tags from "./Tags.astro";
const { title, desp, defaultColor, flip = false, tags = [] } = Astro.props;
---

<div class={` p-5 w-full  ${defaultColor}`}>
  <div
    class=`m-2 flex justify-between items-center  ${
    flip ? "flex-row" : "flex-row-reverse"
  }`
  >
    <div class=`${flip ? 'pr-3':'pl-3'} font-semibold`>
      <h4 class="text-base sm:text-lg md:text-xl font-extrabold">{title}</h4>
      <p>{desp}</p>
      <section class="flex">
        <a class=`p-2 ${flip?'ml-1 my-1':'mr-1 my-1'} flex items-center text-white bg-black` href=""
          >Vist <svg
            class="ml-1"
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="#ffffff"
            viewBox="0 0 256 256"
            ><path
              d="M224,104a8,8,0,0,1-16,0V59.32l-66.33,66.34a8,8,0,0,1-11.32-11.32L196.68,48H152a8,8,0,0,1,0-16h64a8,8,0,0,1,8,8Zm-40,24a8,8,0,0,0-8,8v72H48V80h72a8,8,0,0,0,0-16H48A16,16,0,0,0,32,80V208a16,16,0,0,0,16,16H176a16,16,0,0,0,16-16V136A8,8,0,0,0,184,128Z"
            ></path></svg
          ></a
        >
        <a class="p-2 m-1 flex items-center text-white bg-black" href="">Github<svg
          class="ml-1"
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="#ffffff"
          viewBox="0 0 256 256"
          ><path
            d="M224,104a8,8,0,0,1-16,0V59.32l-66.33,66.34a8,8,0,0,1-11.32-11.32L196.68,48H152a8,8,0,0,1,0-16h64a8,8,0,0,1,8,8Zm-40,24a8,8,0,0,0-8,8v72H48V80h72a8,8,0,0,0,0-16H48A16,16,0,0,0,32,80V208a16,16,0,0,0,16,16H176a16,16,0,0,0,16-16V136A8,8,0,0,0,184,128Z"
          ></path></svg
        ></a>
      </section>
    </div>
    <div class="border-b-4 h-32 w-64 min border-black border-4 font-semibold">
    </div>
  </div>
  <div class="m-2 flex flex-wrap">
    {tags.map((tag: string) => <Tags text={tag} />)}
  </div>
</div>

<hr class="border-black border-4 w-full h-1" />
